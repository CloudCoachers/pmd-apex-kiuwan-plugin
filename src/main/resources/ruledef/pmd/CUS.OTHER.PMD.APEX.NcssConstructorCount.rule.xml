<?xml version="1.0" encoding="UTF-8"?>

<rule-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.optimyth.com/schema/definitions/rule" version="1.0">
  <rule id="CUS.OTHER.APEX.PMD.NcssConstructorCount">
    <java-class>com.als.core.NullRule</java-class>
    <java-version>1.8</java-version>
    <reference><![CDATA[${pmd.website.baseurl}/pmd_rules_apex_codestyle.html#methodnamingconventions]]></reference>
    <parameters/>
    <code-examples>
      <code-example id="codeExample">
        <ko><![CDATA[public class Foo extends Bar {
    //this constructor only has 1 NCSS lines
    public Foo() {
        super();




        super.foo();
}
}]]></ko>
        <ok><![CDATA[]]></ok>
      </code-example>
    </code-examples>
    <incompatibilities/>
    <related-rules/>
    <criteria-values>
      <criterium-value ref="OPT.CRITERIUM_VALUE.LANGUAGE_PARSER.OTHER"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.PRIORITY.MEDIUM"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.REPAIR_DIFFICULTY.MEDIUM"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.CQM.MAINTAINABILITY"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.ENGINE.OTHER"/>
    </criteria-values>
    <i18ns>
      <i18n ref="OPT.LANGUAGE.ENGLISH">
        <name><![CDATA[The constructor has an NCSS line count of {0}]]></name>
        <description><![CDATA[This rule uses the NCSS (Non-Commenting Source Statements) algorithm to determine the number of lines of code for a given constructor. NCSS ignores comments, and counts actual statements. Using this algorithm, lines of code that are split are counted as one.]]></description>
        <remediation><![CDATA[]]></remediation>
        <configuration><![CDATA[]]></configuration>
        <benefits><![CDATA[]]></benefits>
        <drawbacks><![CDATA[]]></drawbacks>
        <parameters/>
      </i18n>
    </i18ns>
  </rule>
</rule-definition>
