<?xml version="1.0" encoding="UTF-8"?>

<rule-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.optimyth.com/schema/definitions/rule" version="1.0">
  <rule id="CUS.OTHER.APEX.PMD.ForLoopsMustUseBraces">
    <java-class>com.als.core.NullRule</java-class>
    <java-version>1.8</java-version>
    <reference><![CDATA[${pmd.website.baseurl}/pmd_rules_apex_codestyle.html#forloopsmustusebraces]]></reference>
    <parameters/>
    <code-examples>
      <code-example id="codeExample">
        <ko><![CDATA[for (int i = 0; i < 42; i++) // not recommended
    foo();
]]></ko>
        <ok><![CDATA[for (int i = 0; i < 42; i++) { // preferred approach
    foo();
}
]]></ok>
      </code-example>
    </code-examples>
    <incompatibilities/>
    <related-rules/>
    <criteria-values>
      <criterium-value ref="OPT.CRITERIUM_VALUE.LANGUAGE_PARSER.OTHER"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.PRIORITY.MEDIUM"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.REPAIR_DIFFICULTY.MEDIUM"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.CQM.MAINTAINABILITY"/>
      <criterium-value ref="OPT.CRITERIUM_VALUE.ENGINE.OTHER"/>
    </criteria-values>
    <i18ns>
      <i18n ref="OPT.LANGUAGE.ENGLISH">
        <name><![CDATA[Avoid using 'for' statements without curly braces]]></name>
        <description><![CDATA[Avoid using 'for' statements without using surrounding braces. If the code formatting or indentation is lost then it becomes difficult to separate the code being controlled from the rest.]]></description>
        <remediation><![CDATA[]]></remediation>
        <configuration><![CDATA[]]></configuration>
        <benefits><![CDATA[]]></benefits>
        <drawbacks><![CDATA[]]></drawbacks>
        <parameters/>
      </i18n>
    </i18ns>
  </rule>
</rule-definition>
